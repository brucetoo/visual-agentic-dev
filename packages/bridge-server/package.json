{
    "name": "@visual-agentic-dev/bridge-server",
    "version": "1.1.4",
    "description": "Bridge server for Visual Agentic Dev - connects browser extension to Claude Code CLI",
    "main": "./dist/index.js",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "bin": {
        "vdev-server": "./bin/vdev-server.js"
    },
    "files": [
        "dist",
        "bin"
    ],
    "scripts": {
        "dev": "tsup --watch",
        "build": "tsup",
        "start": "node bin/vdev-server.js",
        "lint": "eslint src --ext .ts",
        "clean": "rm -rf dist"
    },
    "dependencies": {
        "node-pty": "^1.1.0",
        "ws": "^8.16.0",
        "@xterm/headless": "^5.3.0",
        "@xterm/addon-serialize": "^0.14.0"
    },
    "devDependencies": {
        "@types/node": "^20.10.0",
        "@types/ws": "^8.5.10",
        "node-gyp": "^12.2.0",
        "tsup": "^8.0.0",
        "typescript": "^5.3.0"
    },
    "engines": {
        "node": ">=18"
    },
    "keywords": [
        "visual-agentic-dev",
        "bridge-server",
        "claude-code",
        "websocket"
    ],
    "license": "MIT",
    "publishConfig": {
        "access": "public",
        "registry": "https://registry.npmjs.org/"
    }
}