{
    "manifest_version": 3,
    "name": "Visual Agentic Dev",
    "version": "1.0.0",
    "description": "Click React elements to modify code via Claude Code",
    "permissions": [
        "activeTab",
        "tabs",
        "sidePanel",
        "storage",
        "scripting"
    ],
    "host_permissions": [
        "http://localhost:*/*",
        "http://127.0.0.1:*/*"
    ],
    "background": {
        "service_worker": "background/service-worker.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "http://localhost:*/*",
                "http://127.0.0.1:*/*"
            ],
            "js": [
                "content/content-script.js"
            ],
            "run_at": "document_start"
        }
    ],
    "side_panel": {
        "default_path": "sidepanel/index.html"
    },
    "action": {
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        },
        "default_title": "Visual Agentic Dev"
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "commands": {
        "toggle-inspect": {
            "suggested_key": {
                "default": "Ctrl+Shift+S",
                "mac": "Command+Shift+S"
            },
            "description": "Toggle element selection mode"
        }
    }
}